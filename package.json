{
  "name": "textify",
  "version": "1.0.0",
  "description": "A modern chatbot application built with React, Nhost, Hasura, and n8n",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd nhost && nhost up",
    "dev:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "setup": "npm install && cd frontend && npm install",
    "clean": "rimraf frontend/node_modules frontend/build nhost/.nhost",
    "reset": "npm run clean && npm run setup"
  },
  "keywords": [ "chatbot", "react", "nhost", "hasura", "graphql", "n8n", "openrouter", "ai", "chat", "authentication" ],
  "author": "Utsav Sarda",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
